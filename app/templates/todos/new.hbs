<form id="new-todo-form" autocomplete="off">
    <div class="form-group">
        <label for="title">Title</label>
        {{input id="title" type="text" class="form-control" value=title placeholder="Add Todo..."}}
    </div>
    <div class="form-group">
        <label for="due-date">Due Date</label>
        {{input id="due-date" type="date" class="form-control" value=date}}
    </div>
    <div class="form-group">
        <label for="body">Body</label>
        {{textarea id="body" class="form-control" value=body placeholder="Todo body..."}}
    </div>
    <button {{action 'addTodo'}} class="btn btn-primary">Submit</button>
    {{#link-to 'todos' class="btn btn-default"}}Close{{/link-to}}
</form>